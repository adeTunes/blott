{
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.ts"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "testMatch": [
    "**/__tests__/**/*.(test|spec).(js|jsx|ts|tsx)"
  ],
  "collectCoverageFrom": [
    "components/**/*.{js,jsx,ts,tsx}",
    "hooks/**/*.{js,jsx,ts,tsx}",
    "lib/**/*.{js,jsx,ts,tsx}",
    "!**/*.d.ts"
  ],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "preset": "ts-jest",
  "transform": {
    "^.+\\.(ts|tsx)$": ["ts-jest", {
      "tsconfig": {
        "jsx": "react-jsx"
      }
    }]
  }
}
